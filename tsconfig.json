{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "react",
      "react-dom",
      "jest",
      "testing-library__jest-dom",
      "node",
      "nodemailer"
    ]
  },
  "exclude": [
    "cypress",
    "cypress.config.ts",
    "__mocks__",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
